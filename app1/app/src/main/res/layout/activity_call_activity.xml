<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.roger.fakephone.Call_activity"
    android:padding="20sp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="123456789"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="10dp"
        android:text="1" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/btn_1"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/btn_1"
        android:layout_toRightOf="@+id/btn_1"
        android:text="2" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/btn_2"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/btn_2"
        android:layout_toRightOf="@+id/btn_2"
        android:text="3" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_1"
        android:layout_marginTop="10dp"
        android:text="4" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/btn_4"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/btn_4"
        android:layout_toRightOf="@+id/btn_4"
        android:text="5" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/btn_5"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/btn_5"
        android:layout_toRightOf="@+id/btn_5"
        android:text="6" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_4"
        android:layout_marginTop="10dp"
        android:text="7" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/btn_7"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/btn_7"
        android:layout_toRightOf="@+id/btn_7"
        android:text="8" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/btn_8"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/btn_8"
        android:layout_toRightOf="@+id/btn_8"
        android:text="9" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/btn_8"
        android:layout_alignStart="@+id/btn_8"
        android:layout_below="@+id/btn_8"
        android:layout_marginTop="5dp"
        android:text="0" />

    <Button
        android:id="@+id/btn_esborra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Esborra" />

    <Button
        android:id="@+id/btn_truca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Truca" />

</RelativeLayout>
